<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.YOUTUBECONTROLPlaylistCreatorActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="30dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle Playlist"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/playlist_create_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textSize="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/playlist_create_description"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.7" />
    </LinearLayout>
    <Button
        android:id="@+id/playlist_create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create"
        android:layout_marginTop="40dp"/>

</LinearLayout>