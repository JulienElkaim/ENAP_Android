<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:id="@+id/root"

    android:layout_marginLeft="20dp"
    android:paddingBottom="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="100dp"
                android:autoSizeStepGranularity="2dp"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:text="Welcome to My Video"/>
            <TextView
                android:id="@+id/nb_video_in_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:gravity="right"
                android:text="nb"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/video_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeStepGranularity="2dp"
            android:text="Un text bien trop long pour cette tablette mais bon ca va j'ai pas trop de probleme avec ca parce que j'ai prevu un moyen pour régler le problème. La preuve je vais le répeter.Un text bien trop long pour cette tablette mais bon ca va j'ai pas trop de probleme avec ca parce que j'ai prevu un moyen pour régler le problème. La preuve je vais le répeter."
            android:lines="2"
            android:ellipsize="end"
            android:paddingRight="8dp"
            android:layout_marginRight="20dp"
            />


    </LinearLayout>


</LinearLayout>

</LinearLayout>
