<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".controller.Youtube.Aidant.PlaylistCreatorDispatcherActivity"
android:background="@color/colorBackground">

<LinearLayout
    android:id="@+id/wrapper_ChoiceButtons"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:ignore="UselessParent">


    <ImageButton
        android:id="@+id/new_playlist_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/new_playlist"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/youtube_icon"/>


    <ImageButton
        android:id="@+id/actual_playlist_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/actual_playlist_button"
        android:contentDescription="@string/wikipedia_icon" />

</LinearLayout>


</RelativeLayout>